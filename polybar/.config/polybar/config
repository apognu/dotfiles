[settings]
screenchange-reload = true
background = #eaeaea
foreground = #282828
padding = 3

[bar/bottombar]
monitor = ${env:MONITOR:eDP1}
bottom = true

width = 80%
height = 32

background = ${settings.background}
line-size = 3
padding = 6
border-top-size = 1

override-redirect = true

offset-x = 10%
offset-y = 6

radius = 3

font-0 = Noto Sans:size=12;2
font-1 = Noto Sans:size=8;2
font-2 = Noto Sans:size=6;2
font-3 = Hasklug Nerd Font Mono:size=13;3

modules-left = desktops
modules-right = vpn network volume battery date time

[module/battery]
type = custom/script
exec = ~/.config/polybar/scripts/battery.sh
interval = 30
format-padding = ${settings.padding}
format-foreground = ${settings.foreground}
label-font = 2

[module/volume]
type = custom/script
exec = ~/.config/polybar/scripts/volume.sh
interval = 2
format-padding = ${settings.padding}
scroll-up = ~/.i3/volume.sh up
scroll-down = ~/.i3/volume.sh down
click-middle = ~/.i3/volume.sh mute
label-font = 2
format-foreground = ${settings.foreground}

[module/network]
type = custom/script
exec = ~/.config/polybar/scripts/network.sh
interval = 5
format-padding = ${settings.padding}
format-foreground = ${settings.foreground}
label-font = 2

[module/vpn]
type = custom/script
exec = ~/.config/polybar/scripts/vpn.sh
interval = 5
label-font = 2
format-padding = ${settings.padding}
format-foreground = ${settings.foreground}

[module/date]
type = internal/date
interval = 1
label = %date%
label-font = 2
format-foreground = ${settings.foreground}
label-padding-left = ${settings.padding}
label-padding-right = 0
date = "%a %d %b "

[module/time]
type = internal/date
interval = 1
label = %time%
format-foreground = ${settings.foreground}
time = %H:%M

[module/desktops]
type = internal/i3
format-foreground = ${settings.foreground}
strip-wsnumbers = true
label-focused = "ï‡Ž"
label-focused-font = 3
label-unfocused-font = 3
label-urgent-font = 3
label-focused-padding = 1
label-unfocused-padding = 1
label-urgent-padding = 1
